CompileFlags:
  Add:
    # Exception handling
    - -fexceptions
    - -std=c++20
    
    # Defines
    - -DLIBXML_XINCLUDE_ENABLED
    - -DLIBXML_SCHEMATRON_ENABLED
    - -DBUILDING_NODE_EXTENSION
    - -DNODE_ADDON_API_CPP_EXCEPTIONS
    
    # Include paths - Node.js headers
    - -I/Users/max/.nvm/versions/node/v24.3.0/include/node
    
    # Include paths - node-addon-api headers (absolute path)
    - -I/Users/max/code/loanlink/archive/libxmljs2/node_modules/.pnpm/node-addon-api@8.5.0/node_modules/node-addon-api
    
    # Include paths - nan headers (absolute path)
    - -I/Users/max/code/loanlink/archive/libxmljs2/node_modules/.pnpm/nan@2.22.2/node_modules/nan
    
    # Include paths - vendor libxml (absolute path)
    - -I/Users/max/code/loanlink/archive/libxmljs2/vendor/libxml/include
    - -I/Users/max/code/loanlink/archive/libxmljs2/vendor/libxml/include/libxml
    
  Remove:
    # Remove any conflicting flags
    - -fno-exceptions

Diagnostics:
  UnusedIncludes: None
  MissingIncludes: None
  
Index:
  Background: Build

# Suppress warnings from vendor code
---
If:
  PathMatch: vendor/.*
Diagnostics:
  Suppress: "*"
